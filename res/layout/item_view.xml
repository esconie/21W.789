<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:padding="25px"
    android:background="@color/white" >
   	
    <TextView
       	style="@style/Text"
        android:text="Chobani Yoghurt"/>

   	<LinearLayout
		android:orientation="horizontal" 
		style="@style/Spaced" >
		
		<ImageView
	        android:src="@drawable/chobanipic"
	        android:layout_weight="1" 
	        android:layout_height="fill_parent"
	        android:layout_width="0px" /> 
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
			android:orientation="vertical" 
			android:layout_width="0dip"
			android:layout_weight="1" 
			android:layout_height="wrap_content" >
			<RadioGroup android:id="@+id/radioGroup1" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content">
						
			    <RadioButton android:layout_height="0dip"
					         android:layout_width="fill_parent" 
							 android:layout_weight="1" 
						     android:onClick="clickUp" 
						     android:text="RadioButton1"
						     android:button="@layout/green_up"
						     android:padding="0px" />
			    
			    <RadioButton android:layout_height="0dip"
					         android:layout_width="fill_parent" 
 							 android:layout_weight="1" 
						     android:onClick="clickMid"
						     android:button="@layout/yellow_mid" 
						     android:padding="0px" />
			    
			    <RadioButton android:layout_height="0dip"
					         android:layout_width="fill_parent" 
							 android:layout_weight="1" 
						     android:onClick="clickDown"
						     android:button="@layout/red_down"
						     android:padding="0px" />
			</RadioGroup>
			
		</LinearLayout>	
	</LinearLayout>
	
   	<LinearLayout style="@style/Spaced.HR" />
	    
	<include layout="@layout/user_result" />
	
	<include layout="@layout/user_result" />
    
  
    <LinearLayout style="@style/Spaced.HR" />
    
    <TextView
        style="@style/Text"
        android:text="Public Opinion 73%"
         />
    
    
</LinearLayout>